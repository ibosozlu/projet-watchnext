{% extends 'base.html.twig' %}

{% block head_css %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/waitingscreen.css') }}">

{% endblock %}

{% block body %}

    {{ parent() }}

    <main>
        <section>
            <div class="container">
                <div class="row justify-content-around">
                    <div class="col-md-5 contenu">
                        <h3>CONNEXION</h3>
                        <form>

                            <div class="form-group">
                                <label for="email">Votre identifiant</label>
                                <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Merci de saisir votre identifiant">
                            </div>

                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" class="form-control" id="password" placeholder="Merci de saisir votre mot de passe">
                            </div>
                            <button type="submit" class="btn button-color">Valider</button>

                        </form>
                    </div>


                    <div class="col-md-5 contenu">
                        <h3>S'INSCRIRE</h3>
                        <form>
                            <div class="form-group">
                                <label for="email">Votre identifiant (adresse email)</label>
                                <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Merci de saisir votre identifiant">
                            </div>

                            <div class="form-group">
                                <label for="pseudo">Votre pseudo</label>
                                <input type="pseudo" class="form-control" id="pseudo" placeholder="Merci de saisir votre pseudo">
                            </div>

                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" class="form-control" id="password" placeholder="Merci de saisir votre mot de passe">
                            </div>

                            <div class="form-group">
                                <label for="password_confirmation">Confirmation du mot de passe</label>
                                <input type="password" name="password_confirmation" id="password_confirmation" class="form-control" placeholder="Merci de confirmer votre mot de passe">
                            </div>

                            <button type="submit" class="btn button-color">Valider</button>

                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>

{% endblock %}