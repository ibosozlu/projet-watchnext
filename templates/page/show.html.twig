{% extends 'base.html.twig' %}

{% block body %}
    <head>
        <link href="https://fonts.googleapis.com/css?family=Raleway:400,300,600,800,900" rel="stylesheet"
              type="text/css">

        <link rel="stylesheet" type="text/css" href="{{ asset('css/show.css') }}">
        <script src="{{ asset('js/progressbar.min.js') }}"></script>

    </head>

    <body>
    <main style="padding-top: 128px;"></main>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="poster"> <!-- -->
                </div>
            </div>
            <div class="col-md-7">

                <div class="titre"></div>
                <div class="showRunner"></div>
                <div class="row justify-content-center">
                    <div id="note"></div>
                    <div class="genre"></div>
                </div>
                {% if app.user is null %}
                    <p> Se connecter pour ajouter cette page aux favoris</p>
                   {% elseif app.user.containsSerie(id) == true %}
                       <form method="POST">
                           <input type="hidden" name="id" value="{{ id }}">
                           <button type="" class="btn button-color1" name="Ajouter" disabled><b>Déjà ajoutée</b></button>
                       </form>
                        {% else %}
                            <form method="POST">
                                 <input type="hidden" name="id" value="{{ id }}">
                                 <button type="submit" class="btn
                                 button-color" name="Ajouter"><b>Ajouter cette série à ma liste</b></button>
                            </form>

                {% endif %}

                <div class="description"></div>


            </div>
        </div>

        <div class="container" style="margin-top: 30px;"> <!-- Div contenant le titre casting-->
            <h3><b>Casting</b></h3>
        </div>

        <div class="container casting">
            <div class="row">

                <div class="col">
                    <div class="photo1 "></div>
                    <div id="acteur1"></div>
                </div>

                <div class="col">
                    <div class="photo2"></div>
                    <div id="acteur2"></div>
                </div>

                <div class="col">
                    <div class="photo3"></div>
                    <div id="acteur3"></div>
                </div>

                <div class="col">
                    <div class="photo4"></div>
                    <div id="acteur4"></div>
                </div>

                <div class="col">
                    <div class="photo5"></div>
                    <div id="acteur5"></div>
                </div>

            </div> <!-- fin de la row comprenant les acteurs -->

        </div> <!-- fin de la row casting -->


        <div class="container" style="margin-top: 30px;">
            <div class="suggestions row">
                <h4><b>Les séries que vous pourriez aimer</b></h4>
            </div>
            <div class="row" style="margin-top: 30px;">

                <div class="col-4 recommandation1">
                    <div class="recommandationPoster1"></div>
                    <div class="recommandationTexte1"></div>
                </div>

                <div class="col-4 recommandation2">
                    <div class="recommandationPoster2"></div>
                    <div class="recommandationTexte2"></div>
                </div>

                <div class="col-4 recommandation3">
                    <div class="recommandationPoster3"></div>
                    <div class="recommandationTexte3"></div>
                </div>

            </div>


        </div> <!-- fin de la row suggestions -->
    </div>
    </main>
    </body>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var id = '{{ id }}';
    </script>

    <script src="{{asset('js/show.js')}}"></script>


{% endblock %}